<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/topborder">
     <LinearLayout
            android:orientation="vertical"
         android:layout_marginTop="@dimen/margin_top"
         android:layout_marginBottom="@dimen/margin_bottom"
         android:layout_marginLeft="@dimen/margin_left"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="0.2"
            >
         <Button
             android:id="@+id/btn_mail"
             android:layout_width="@dimen/imgbtn_width"
             android:layout_height="@dimen/imgbtn_height"
             android:layout_marginLeft="@dimen/margin_left"
             android:layout_marginRight="@dimen/margin_right"
             android:layout_gravity="center_horizontal"
             android:gravity="center"
             android:focusable="false"
             android:background="@drawable/mail_32px"
             android:textSize="14sp" />
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
              android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="邮件"
            android:textSize="13sp" />
     </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        >
        <Button
            android:id="@+id/btn_sms"
            android:layout_width="@dimen/imgbtn_width"
            android:layout_height="@dimen/imgbtn_height"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:focusable="false"
            android:background="@drawable/sms_32px"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="短消息"
            android:textSize="13sp" />
    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            >
           <Button
            android:id="@+id/btn_chat"
            android:layout_width="@dimen/imgbtn_width"
            android:layout_height="@dimen/imgbtn_height"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
               android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:focusable="false"
            android:background="@drawable/chat_32px"
            android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="私聊"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
        android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            >

        <Button
            android:id="@+id/btn_call"
            android:layout_width="@dimen/imgbtn_width"
            android:layout_height="@dimen/imgbtn_height"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:focusable="false"
            android:background="@drawable/call_32px"
            android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="电话"
                android:textSize="13sp" />
        </LinearLayout>
</LinearLayout>