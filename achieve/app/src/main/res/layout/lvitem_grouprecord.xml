<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >  
         <TextView
        android:id="@+id/task_item_user_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="start"
        android:layout_marginLeft="@dimen/margin_left"
        android:textSize="13sp"
        />
        <TextView
        android:id="@+id/tv_recordtime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"       
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_left"
        android:gravity="start"
        android:textSize="12sp" />
      </LinearLayout>   
      
        <CheckBox
        android:id="@+id/cb_recordcomments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:button="@drawable/checkboxcolor"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:clickable="false"
        android:textSize="12sp" />
       <TextView
        android:id="@+id/tv_recordprocess"
        android:layout_width="40dp"
        android:layout_height="wrap_content" 
        android:layout_gravity="center_vertical"      
        android:gravity="center"
        android:textSize="12sp" />
      <TextView
        android:id="@+id/tv_recordtype"
        android:layout_width="@dimen/imgbtn_width"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/listpadding_top"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@drawable/milestone_16px"
        />
         <TextView
        android:id="@+id/tv_taskid_no"
        android:layout_width="50dp"
        android:layout_height="wrap_content"       
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_left"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="12sp" />   
</LinearLayout>
