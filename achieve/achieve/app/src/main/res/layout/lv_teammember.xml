<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:scrollbars="horizontal" 
    android:background="@color/mTextColor2">    
    
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="name"
        android:visibility="gone"
        android:textSize="13sp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_marginLeft="@dimen/margin_left"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
       >
       <ImageView
        android:id="@+id/iv_headpic"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:text="name"
        android:textSize="13sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_usernickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="13sp" />
     <TextView
        android:id="@+id/tv_phoneNo"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="0.4"
         android:layout_marginTop="@dimen/margin_top"
         android:layout_marginBottom="@dimen/margin_bottom"
         android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/tv_usertitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/tv_usertype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="13sp" />
    <Button
        android:id="@+id/btn_chat"
        android:layout_width="@dimen/imgbtn_width"
        android:layout_height="@dimen/imgbtn_height"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:focusable="false"
        android:visibility="gone"
        android:background="@drawable/chat_32px"
        android:textSize="14sp" />
    <Button
        android:id="@+id/btn_call"
        android:layout_width="@dimen/imgbtn_width"
        android:layout_height="@dimen/imgbtn_height"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:focusable="false"
        android:visibility="gone"
        android:background="@drawable/call_32px"
        android:textSize="14sp" />
  </LinearLayout>
